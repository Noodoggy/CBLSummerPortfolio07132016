@model CBLSummerPortfolio07132016.Models.Comment
@{
    ViewBag.Title = "Edit Comment";
}
<div id="editcomment" class="big-padding">
    <div class="col-xs-offset-1 col-xs-6" style="margin-top:100px">
        <h2>Edit Comment</h2>
    </div>


    @using (Html.BeginForm("EditComment", "Blog", FormMethod.Post, new { enctype = "Multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Created)
        @Html.HiddenFor(model => model.Updated)
        
        @Html.HiddenFor(model => model.AuthorId)
        @Html.HiddenFor(model => model.BlogPostId)
        
        @*<input type="hidden" name="BlogPostId" value="@Model.BlogPostId" />*@
        <div class="row">
            <div class="col-xs-offset-1 col-xs-6">
                <div class="form-group">
                    <h3>Comment</h3>
                    <label class="sr-only" for="Comment">Comment Edit</label>
                    @Html.EditorFor(model => model.BodyText, new { htmlAttributes = new { @class = "form-control" } })
                    <h3>Update Reason</h3>
                    <label class="sr-only" for="Comment">Update Reason</label>
                    @Html.EditorFor(model => model.UpdateReason, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <button type="submit" value="Save" class="btn btn-primary btn-sm" id="submit-button">
                    <i class="fade loading-icon"></i> <span>Save</span>
                </button>
            </div>
        </div>
       

    }
</div>
