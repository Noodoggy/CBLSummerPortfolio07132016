<!DOCTYPE html>
<html lang="en-US" class="no-js">
<head>
    <!-- ==============================================
    Title and Meta Tags
    =============================================== -->
    <meta charset="utf-8">
    <title>CbentonL| My Portfolio</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- ==============================================
    Favicons
    =============================================== -->
    <link rel="shortcut icon" type="image/x-icon"  href="~/assets/images/Coder_Foundry_Logo.png">
    <link rel="Coder_Foundry_Logo" href="~/assets/images/Coder_Foundry_Logo.png">
    <link rel="Coder_Foundry_Logo" sizes="72x72" href="~/assets/images/Coder_Foundry_Logo_72X72.png">
    <link rel="Coder_Foundry_Logo" sizes="114x114" href="~/assets/images/Coder_Foundry_Logo_114X114.png">

    <!-- ==============================================
    CSS
    =============================================== -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/flexslider.css">
    <link rel="stylesheet" href="~/assets/css/font-awesome.css">
    <link rel="stylesheet" href="~/assets/css/styles-1.css">
    <link href="~/Content/PagedList.css" rel="stylesheet" />

    <!-- ==============================================
    Fonts
    =============================================== -->
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,300,200,600,700' rel='stylesheet' type='text/css'>


    <!-- ==============================================
    JS
    =============================================== -->
    <!--[if lt IE 9]>
        <script src="~/assets/js/libs/respond.min.js"></script>
    <![endif]-->

    <script type="text/javascript" src="~/assets/js/libs/modernizr.min.js"></script>
 

</head>

<body data-spy="scroll" data-target="#main-nav" data-offset="400">

    <!--=== PAGE PRELOADER ===-->
    <div id="page-loader"><span class="page-loader-gif"></span></div>

    <!-- ==============================================
    MAIN NAV
    =============================================== -->
    <div id="main-nav" class="navbar navbar-fixed-top">
        <div class="container">

            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#site-nav">
                    <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </button>

                <!-- ======= LOGO ========-->
                <a href="@Url.Action("Index", "Home")"><img src="~/assets/images/mylogo.png" alt="" /></a>

            </div>

            <div id="site-nav" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="@Url.Action("Index", "Blog")"><i class="fa fa-pencil-square-o"></i>Blog</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Resume", "Home")"><i class="fa fa-cog"></i>Resume</a>
                    </li>
                    <li>
                        <a href="@Url.Action("About", "Home")"><i class="fa fa-graduation-cap"></i>Profile</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Portfolio", "Home")"><i class="fa fa-briefcase"></i>Portfolio</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Contact", "Home")"><i class="fa fa-envelope"></i>Contact</a>
                    </li>
                </ul>
            </div><!--End navbar-collapse -->

            
              
                
               


            </div><!--End container -->

        </div><!--End main-nav -->

    @{
        var isBlog = ViewContext.RouteData.Values["controller"].ToString().ToUpper() == "BLOG";
        //var isIndex = ViewContext.RouteData.Values["action"].ToString().ToUpper() == "*";

        if (isBlog)
        {

            <div class="col-sm-2 nav navbar-nav" id="trends">
                <ul style="list-style: none">
                    <li><button class="btn btn-dc btn-main-color" style="margin-top: 20px">@Html.ActionLink("Latest Post", "Latest", "Blog")</button></li>
                    <li><button class="btn btn-dc btn-main-color" style="margin-top: 20px">@Html.ActionLink("Latest Comment", "LatestComment", "Blog")</button></li>
                    <li><button class="btn btn-dc btn-main-color" style="margin-top: 20px">@Html.ActionLink("Most Popular", "MostPopular", "Blog")</button></li>
                    <li><p>
                            @Html.Partial("_LoginPartial")
                        </p>
                    </li>
                    <li>
                        @using (Html.BeginForm("Index", "Blog", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="form-group col-xs-8">
                                    <input type="text" id="search" class="form-control" name="query" placeholder="Search..." required style="width: 100%; height: 50px; border-radius: 10px; padding-right: 50px; display: inline;" />
                                    <button type="submit" class="btn btn-primary btn-dc btn-main-color " id="submit-button" style="width:auto">
                                        <i class="fade loading-icon"></i> <span>Search</span>
                                    </button>
                                </div>
                            </div>
                        }
                    </li>
                    
                        @if (User.IsInRole("Admin"))
                        {
                            <li>
                                <div class="row">
                                    <p class="text-center">
                                        @Html.ActionLink("Create New", "Create")
                                        
                                    </p>
                                </div>
                            </li>
                            <li>
                                <div class="row">
                                    <p class="text-center">
                                        @Html.ActionLink("Administrator", "AdminBlogIndex")
                                    </p>
                                </div>
                            </li>
                        }
                </ul>
                
               
                
 
        
           




        </div>
        }

    }



    @RenderBody();

    <footer id="main-footer">

            <div class="container">

                <div class="row">

                    <div class="col-sm-2">

                        <a href="@Url.Action("Index","Home")">
                            <img class="img-responsive" src="~/assets/images/mylogo-bw.png" alt="" />
                        </a>

                    </div>

                    <div class="col-sm-8">

                        <nav>

                            <ul class="footer-nav">
                                <li><a href="@Url.Action("Index","Blog")">Blog</a></li>
                                    @*<a href="http://cbenton-blog.azrewebsites.net/Blog/"><i class="fa fa-pencil-square-o"></i>Blog</a>*@
                                    @*uncomment above when blog is live*@
                                
                                <li><a href="@Url.Action("Resume","Home")">Resume/Skills</a></li>
                                <li><a href="@Url.Action("About","Home")">About</a></li>
                                <li><a href="@Url.Action("Portfolio","Home")">Portfolio</a></li>
                                <li><a href="@Url.Action("Contact","Home")">Contact</a></li>
                            </ul>

                        </nav>

                    </div>

                    <div class="col-sm-2 text-right social-links">

                        <a href="https://twitter.com/CBentonL" data-toggle="tooltip" title="Follow me on Twitter"><i class="fa fa-fw fa-twitter"></i></a>
                        @*<a href="#" data-toggle="tooltip" title="Follow me on Facebook"><i class="fa fa-fw fa-facebook"></i></a>*@
                        <a href="https://www.linkedin.com/profile/preview?vpa=pub&locale=en_US" data-toggle="tooltip" title="Follow me on LinkedIn"><i class="fa fa-fw fa-linkedin"></i></a>

                    </div>

                </div>

            </div>

        </footer>
  
    
    <!-- ==============================================
    SCRIPTS
    =============================================== -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="assets/js/libs/jquery-1.9.1.min.js">\x3C/script>')</script>

    <script src="~/assets/js/libs/bootstrap.min.js"></script>
    <script src="~/assets/js/jquery.easing.1.3.min.js"></script>
    <script src="~/assets/js/waypoints.min.js"></script>
    <script src="~/assets/js/jquery.easypiechart.js"></script>
    <script src="~/assets/js/twitterFetcher_min.js"></script>
    <script src="~/assets/js/jquery.flexslider.min.js"></script>
    <script src="~/assets/js/jquery.fitvids.js"></script>
    <script src="~/assets/js/contact.js"></script>
    <script src="~/assets/js/scripts.js"></script>
    <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
    @RenderSection("scripts", required: false)
    
    
</body>

</html>